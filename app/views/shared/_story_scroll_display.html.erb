<div class="pt-5">
  <h3 class="styled-font"><%= "#{@user.username.capitalize}'s Stories" %></h3>
  <div class="scroll-container d-flex">
    <% if current_user == @user %>
      <%= link_to new_story_path do %>
      <div class="scroll-container-item" style="background-image: url(<%= image_url("empty-book.jpg") %>);">
        <p>New</p>
      </div>
      <% end %>
    <% end %>
    <% @user.stories.reverse.each do |story| %>
      <%= link_to story_path(story) do  %>
      <div class="scroll-container-item" style="background-image: url(<%= if story.picture.present?
            image_url(story.picture)
              else
            image_url('fullbook.jpg')
            end %>);">
      <%= story.title  %>
      </div>
      <% end %>
    <% end  %>
  </div>
</div>
